{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"jsx": "react",
		"rootDirs": ["src", "tests"],
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
			
		},
		"allowJs": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": false,
		"resolveJsonModule": true,
		"noEmit": true,
	},
	"include": ["src", "tests"],
	"exclude": ["tests/e2e/cypress"]
}
